									const newDiv = document.createElement("span");
									newDiv.innerHTML = key;
									newDiv.style.color = "#FF98EA";
									newDiv.style.whiteSpace = "pre-wrap";
									newDiv.style.wordBreak = "break-all";
									newDiv.style.margin = "0px 10px 0px 10px";
